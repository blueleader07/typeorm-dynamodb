{
  "name": "@lmig/legal-nodejs-dynamodb",
  "version": "1.0.8",
  "description": "Query a Dynamo database with NodeJS",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "typings": "./dist/esm/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm-run-all clean lint test tsc",
    "clean": "rm -rf dist",
    "convert": "npx ts-node src/convert/hibernate-entity-converter.ts",
    "lint": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "test": "env NODE_ENV=local nyc mocha -r ts-node/register --reporter mocha-junit-reporter --reporter-options mochaFile=./test-reports/junit.xml test/**/**/*.test.ts",
    "test:console": "nyc mocha  -r ts-node/register --reporter spec test/**/**/*.test.ts",
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.forge.lmig.com:7999/uscm-finance/comp3-nodejs-oracle.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^15.12.5",
    "@types/sinon": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.1.1",
    "mocha-junit-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "sinon": "^9.0.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@lmig/legal-nodejs-utils": "^1.0.3",
    "aws-sdk": "^2.797.0",
    "bignumber.js": "^9.0.1",
    "typeorm": "^0.2.32",
    "typeorm-transactional-cls-hooked": "^0.1.20"
  },
